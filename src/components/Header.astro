---
import { Image } from "astro:assets";
import MainLogoImage from "../assets/images/logo.svg";

// ヘッダーリンク1
const headerNavLinks1 = [
  {
    text: "All",
    href: "#",
  },
  {
    text: "New",
    href: "#",
  },
  {
    text: "Vintage",
    href: "#",
  },
  {
    text: "Category",
    href: "#",
  },
  {
    text: "LookBook",
    href: "#",
  },
  {
    text: "Blog",
    href: "#",
  },
];

// ヘッダーリンク2
const headerNavLinks2 = [
  {
    text: "Login",
    href: "#",
  },
  {
    text: "Contact",
    href: "#",
  },
];
---

<header class="header">
  <div class="header__content">
    <h1 class="header__title">
      <Image
        class="header__logo"
        src={MainLogoImage}
        alt="TOTAL"
        height={19}
        width={109}
        loading={"lazy"}
      />
    </h1>
    <nav class="header__nav">
      <ul class="header__navLists">
        {
          headerNavLinks1.map((link) => (
            <li class="header__navList">
              <a class="header__navLink" href={link.href}>
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
      <ul class="header__navLists">
        {
          headerNavLinks2.map((link) => (
            <li class="header__navList">
              <a class="header__navLink" href={link.href}>
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
